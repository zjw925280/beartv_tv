<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_round_solid_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/dialogTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        tools:text="标题" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/dialogContentStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:paddingLeft="20dp"
        android:paddingTop="18dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        tools:text="内容内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvCancel"
            style="@style/dialogWhiteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_weight="1"
            tools:text="@string/dialog_cancel" />

        <TextView
            android:id="@+id/tvSure"
            style="@style/dialogBlueButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="@string/dialog_sure" />
    </LinearLayout>

</LinearLayout>