<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/loading_empty" />

    <TextView
        android:id="@+id/tvErrorContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9dp"
        android:text="@string/loading_error_net"
        android:textColor="@color/C_999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvReloadButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:background="@drawable/ripple_bg_f76c0d_666666"
        android:gravity="center"
        android:minWidth="115dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/loading_error_retry"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>
