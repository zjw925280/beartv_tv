<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="MiniLoadingStyle" format="reference" />

    <attr name="mini_loading_view_size" format="dimension" />

    <declare-styleable name="MiniLoadingView">
        <!--loading控件的大小，默认32dp-->
        <attr name="mlv_loading_view_size" format="dimension" />
        <!--loading控件的颜色，默认白色-->
        <attr name="mlv_loading_view_color" format="color" />
    </declare-styleable>



    <declare-styleable name="BaseItemRecyclerView">
        <attr name="layout_item" format="reference" />
        <attr name="layout_scroll_enable" format="boolean" />
        <attr name="layout_vertical" format="boolean" />
        <attr name="layout_lazy" format="boolean" />
        <attr name="layout_grid_num" format="integer" />

    </declare-styleable>
</resources>