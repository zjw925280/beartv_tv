<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp"
    app:hl_cornerRadius="6dp"
    app:hl_layoutBackground="#F6F9FB"
    app:hl_shadowHidden="false">

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/ivStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="6dp"
        android:src="@mipmap/icon_blue_start" />

    <ImageView
        android:id="@+id/ivVip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/icon_need_vip_tag"
        android:visibility="gone" />

    <com.coorchice.library.SuperTextView
        android:id="@+id/tvCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:visibility="gone"
        app:stv_corner="6dp"
        app:stv_left_bottom_corner="true"
        app:stv_right_top_corner="true"
        app:stv_shaderEnable="true"
        app:stv_shaderEndColor="#FE9652"
        app:stv_shaderMode="leftToRight"
        app:stv_shaderStartColor="#F66530" />


</com.lihang.ShadowLayout>