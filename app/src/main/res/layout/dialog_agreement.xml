<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="330dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_ffffff_12"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="34dp"
                android:text="@string/agreement_tip"
                android:textColor="@color/back222"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="17dp">

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:lineSpacingExtra="7dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/back222"
                    android:textSize="14sp" />

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check"
                    style="@style/CustomCheckboxTheme3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:visibility="gone"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:theme="@style/MycheckBox" />

                <TextView
                    android:id="@+id/checkText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:textColor="@color/back222"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSure"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/btn_n"
                    android:gravity="center"
                    android:text="@string/agreement_sure"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <com.coorchice.library.SuperTextView
                    android:id="@+id/tvCancel"
                    android:layout_width="280dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="27dp"
                    android:gravity="center"
                    android:text="@string/agree_no"
                    android:textColor="@color/C_999999"
                    android:textSize="15dp"
                    app:stv_corner="19dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>