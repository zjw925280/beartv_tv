<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_ffffff_top_left_right_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape_rect_fff9e7_stroke_fff2bd_17f"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:src="@mipmap/icon_task"/>

                <TextView
                    android:id="@+id/tv_rewarc_coins"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:textColor="@color/C_353535"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_reward_recharge"
                    android:layout_width="50dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/shape_rect_ffca20_12"
                    android:gravity="center"
                    android:text="@string/top_up"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/C_F6F8FE"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_reward"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rect_ffffff_22"
                android:hint="@string/a_word"
                android:paddingLeft="17dp"
                android:textColor="@color/C_353535"
                android:textColorHint="@color/gray_9f9f9f"
                android:textSize="14sp"></EditText>

            <TextView
                android:id="@+id/tv_reward"
                android:layout_width="90dp"
                android:layout_height="44dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape_rect_sign_gradual_22"
                android:gravity="center"
                android:text="@string/reward"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>