<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/pop_qdbg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:text="@string/sign_coins2"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-30dp"
        android:background="@drawable/shape_rect_ffffff_12"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restar_on_week"
                android:textColor="#ffe0e0e0"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/C_333333"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_day"
                android:textColor="@color/C_333333"
                android:textSize="12sp"/>
        </LinearLayout>

        <com.gys.play.ui.view.SignInView
            android:id="@+id/signView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_check_it"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:text="@string/sign_tx"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:stv_corner="20dp"
            app:stv_shaderEnable="true"
            app:stv_shaderEndColor="@color/C_FF8040"
            app:stv_shaderMode="leftToRight"
            app:stv_shaderStartColor="@color/C_FF5E75" />


        <TextView
            android:id="@+id/img_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:drawableRight="@mipmap/icon_more_b"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/rules"
            android:textColor="@color/date_picker_text_dark"
            android:textSize="13dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@mipmap/bookshelf_gb"/>
</LinearLayout>